<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:layout_marginLeft="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="5dp"
        android:background="@drawable/rounded_button_grey">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="2dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/home_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:text="tv1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/home_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_restaurant"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:text="tv2"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/home_owner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/home_location"
            android:layout_toEndOf="@id/imageView"
            android:layout_marginStart="10dp"
            android:text="tv3"
            android:textColor="@color/black"/>

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="8"
            android:rowCount="2"
            android:background="@drawable/rounded_button"
            android:layout_below="@id/home_owner"
            android:paddingTop="3dp"
            android:layout_marginTop="5dp"
            >

            <TextView
                android:text="Order By:"
                android:layout_marginLeft="10dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/home_orderby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="1"
                android:paddingRight="10dp" />


            <View
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="0dp"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Participants:"
                android:paddingLeft="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/home_participants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="4"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="3"
                android:paddingRight="10dp" />


            <View
                android:layout_width="2dp"
                android:layout_height="35dp"
                android:background="@color/white"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:text="Remarks:"-->
            <!--                android:paddingLeft="10dp"/>-->


            <TextView
                android:id="@+id/home_remarks"
                android:layout_width="90dp"
                android:singleLine="false"
                android:minLines="2"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="tv4"
                android:layout_marginLeft="10dp"
                android:textSize="15dp" />



        </GridLayout>

    </RelativeLayout>


</androidx.cardview.widget.CardView>