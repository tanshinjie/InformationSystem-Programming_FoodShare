<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimaryDark"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="10sp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textStyle="bold"
            android:textSize="20dp"/>


        <RelativeLayout
            android:layout_below="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ordersSummary"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:background="@color/DarkerOrange"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:layout_below="@+id/ordersSummary"/>

        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordersSummary"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="20sp"
            android:text="Delivery fees : S$"/>
        <TextView
            android:id="@+id/deliveryFee"
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ordersSummary"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120sp"
            android:text="0.00"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryFee"
            android:layout_marginRight="20sp"
            android:text="Food cost      : S$"/>
        <TextView
            android:layout_marginTop="5sp"
            android:id="@+id/foodCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryFee"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="120sp"
            android:text="0.00"/>
        <TextView
            android:layout_marginTop="5sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryFee"
            android:layout_toLeftOf="@id/pricePerUser"
            android:layout_marginRight="10sp"
            android:text="Total : S$"/>
        <TextView
            android:layout_alignParentRight="true"
            android:layout_marginRight="20sp"
            android:layout_marginTop="5sp"
            android:id="@+id/pricePerUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/deliveryFee"
            android:text="0.00"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>